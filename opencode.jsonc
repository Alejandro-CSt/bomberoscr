{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "biome": {
      "disabled": true
    }
  },
  "mcp": {
    "postgres": {
      "type": "local",
      "enabled": true,
      "command": ["bunx", "@modelcontextprotocol/server-postgres", "{env:DRIZZLE_POSTGRES_URL}"]
    },
    "playwright": {
      "type": "local",
      "command": ["bunx", "@playwright/mcp@latest", "--ignore-https-errors", "--headless"],
      "enabled": true
    }
  }
}
