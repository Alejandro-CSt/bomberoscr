{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint:check": "pnpm --filter api --filter frontend run lint",
    "lint:safefix": "pnpm --filter api --filter frontend run lint:fix",
    "lint:next": "next lint",
    "format:check": "pnpm --filter api --filter frontend run format:check",
    "format": "pnpm --filter api --filter frontend run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript/native-preview": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "turbo": "^2.7.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx,html,yml,yaml}": "pnpm exec oxfmt"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.6.3",
  "pnpm": {
    "packageExtensions": {
      "hono-og@0.0.29": {
        "dependencies": {
          "satori": "0.12.2"
        }
      }
    }
  }
}
